    <h1>Bienvenido a Howarts</h1>

    <p>Lista de Personajes</p>
    

    <div class="card mb-5 row" style="width: 15rem; ">  
        <% @characters.each do |character| %>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Id:  <%= character.id %></li>
            <li class="list-group-item">Nombre: <%= character.name %></li>
            <li class="list-group-item">Casa: <%= character.house %></li>
            <li class="list-group-item">Locacion: <%= character.location %></li>
        </ul>
        <% end %>
    </div>
 </div>


